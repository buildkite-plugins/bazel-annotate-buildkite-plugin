# Bazel configuration for BEP Failure Analyzer

# Use Bzlmod for dependency management
build --enable_bzlmod=true
build --enable_workspace=false

# Error handling
build --verbose_failures
build --show_result=5

# Testing
test --test_output=errors
test --test_summary=short

# Enable modern C++ features required by protobuf
build --cxxopt=-std=c++17
build --host_cxxopt=-std=c++17
